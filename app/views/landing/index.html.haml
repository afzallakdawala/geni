- if notice
  .alert.alert-success
    =notice

- if flash[:error]
  .alert.alert-danger
    = flash[:error]

-[@user, @timelog].each do |data|
  - next unless data && data.errors.any?
  .alert.alert-danger
    %h2= "#{pluralize(data.errors.count, "error")} prohibited this user from being saved:"
    %ul
      - data.errors.full_messages.each do |msg|
        %li= msg

.row
  .col-sm-6
    .panel.panel-default
      .panel-body
        =link_to "Create new User", new_users_path, class: "btn btn-primary"
        %hr
        = form_for(@timelog, class: "form-inline") do |f|
          = text_field_tag "username", nil, class: "form-control", placeholder: "User name to log in", required: true